# Lambda-specific Dockerfile for AWS Lambda Container Image deployment
# Uses AWS Lambda Python base image

FROM public.ecr.aws/lambda/python:3.11

# Copy requirements first for better caching
COPY requirements.txt ${LAMBDA_TASK_ROOT}/

# Install dependencies with specific versions that work with Lambda
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    boto3>=1.34.0 \
    botocore>=1.34.0 \
    langchain-core>=0.3.15 \
    langchain-aws>=0.2.4 \
    python-dotenv==1.0.1 \
    pydantic>=2.0.0 \
    fastapi>=0.115.0 \
    uvicorn[standard]>=0.32.0 \
    mangum>=0.17.0 \
    requests>=2.31.0 \
    httpx>=0.28.0 \
    numpy==1.24.3

# Copy application code
COPY api.py ${LAMBDA_TASK_ROOT}/
COPY chatbot_aws.py ${LAMBDA_TASK_ROOT}/
COPY deployment/lambda_handler.py ${LAMBDA_TASK_ROOT}/

# Set the Lambda handler
CMD ["lambda_handler.handler"]

